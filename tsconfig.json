{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2020",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@environments/*": ["src/environments/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/app/shared/*"],
      "@projects/*": ["src/app/projects/*"],
      "@submission/*": ["src/app/submission/*"],
      "@metadata-schema-form/*": ["src/app/metadata-schema-form/*"]
    }
  }
}
